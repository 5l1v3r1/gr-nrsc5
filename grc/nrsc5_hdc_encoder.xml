<?xml version="1.0"?>
<block>
  <name>HDC Encoder</name>
  <key>nrsc5_hdc_encoder</key>
  <category>[NRSC-5]</category>
  <import>import nrsc5</import>
  <make>nrsc5.hdc_encoder($channels, $bitrate)</make>
  <param>
    <name>Channels</name>
    <key>channels</key>
    <value>2</value>
    <type>int</type>
  </param>
  <param>
    <name>Bitrate</name>
    <key>bitrate</key>
    <value>64000</value>
    <type>int</type>
  </param>
  <check>1 &lt;= $channels &lt;= 2</check>
  <check>0 &lt; $bitrate</check>
  <sink>
    <name>in</name>
    <type>short</type>
    <nports>$channels</nports>
  </sink>
  <source>
    <name>out</name>
    <type>byte</type>
  </source>
</block>
